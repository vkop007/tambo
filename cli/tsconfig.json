{
  "extends": "@tambo-ai/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./src/types"
    ],
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "@tambo-ai/react": ["../react-sdk/src"],
      "@tambo-ai/react/mcp": ["../react-sdk/src/mcp"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.tsx",
    "src/types/*.d.ts"
  ],
  "exclude": ["node_modules", "./dist"]
}
